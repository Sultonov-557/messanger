{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"paths": {
			"@shared/*": ["./shared/src/*"]
		}
	},
	"references": [
		{ "path": "./apps/backend" },
		{ "path": "./apps/frontend" },
		{ "path": "./shared" }
	]
}
